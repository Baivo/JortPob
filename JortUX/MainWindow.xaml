<Window x:Class="JortUX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JortUX"
        mc:Ignorable="d"
        Title="JortPob - Pobbing some jorts..." Height="555" Width="1136" 
        Closing="OnClose">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Height="415" Margin="5">
                <Border BorderThickness="3" BorderBrush="DarkGray">
                    <ScrollViewer>
                        <TextBlock Name="MainOutput" Text="..." TextWrapping="Wrap" Width="475" Margin="3, 3" />
                    </ScrollViewer>
                </Border>
                <Border BorderThickness="3" BorderBrush="DarkGray">
                    <ScrollViewer>
                        <TextBlock Name="DebugOutput" Text="..." TextWrapping="Wrap" Width="588"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>
            <Separator Visibility="Hidden" Margin="5,5,5,5"/>
            <ProgressBar Name="ProgressBar" Value="50" BorderThickness="10"/>
            <Separator Visibility="Hidden" Margin="5,5,5,5"/>
            <TextBlock Name="ProgressOutput" Text="..." TextAlignment="Center"/>
            <Separator Visibility="Hidden" Margin="5,5,5,5"/>
        </StackPanel>
    </Grid>
</Window>
